{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker Build",
            "type": "dockerfile",
            "request": "launch",
            "dockerfile": "Dockerfile",
            "contextPath": "${workspaceFolder}/compose"
        },
        {
            "name": "Octave Debugger: Current File",
            "type": "OctaveDebugger",
            "request": "launch",
            "program": "${file}",
            "octave": "octave-cli",
            "sourceFolder": "${workspaceFolder}"
        },
        {
            "name": "Python Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/app/server/fem_api_server.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Brave",
            "type": "chrome",
            "request": "launch",
            "url": "https://logus2k.com/fem",
            "userDataDir": true,
            "webRoot": "${workspaceFolder}/src/app/client",
            "runtimeExecutable": "C:/Program Files/BraveSoftware/Brave-Browser/Application/brave.exe"
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5867",
            "userDataDir": true,
            "webRoot": "${workspaceFolder}/src/app/client",
        }          
    ],

    "compounds": [

        {
            "name": "logus2k.com/fem -> Client & Server Debug",
            "configurations": [
                "Python Debugger",
                "Brave"
            ],
            "stopAll": true
        },
        {
            "name": "localhost:5867 -> Client & Server Debug",
            "configurations": [
                "Python Debugger",
                "Chrome"
            ],
            "stopAll": true
        }

    ]    
}
